<div id="<%= dom_id post %>">
  <p>
    <div class="avatar_container">
      <%= image_tag post.profile.avatar_url, width: '20rem', style: 'border-radius: 10px' %>
      <strong><%= link_to post.profile.name, profile_path(post.profile) %></strong>
    </div>
    
    <% if post.body.present? %>
      <%= post.body %><br>
    <% end %>
    
    <% if post.images.attached? %>
      <div class="post-images">
        <% post.images.each do |image| %>
          <%= image_tag image.variant(:small) %>
        <% end %>
      </div>
    <% end %>
    
    <%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes' %>

    <div class="controls">
      <% if post.likers.include?(current_user.profile) %>
        <%= button_to 'Unlike', post_unlike_path(post), method: :delete, class: 'btn btn--primary' %>
      <% else%>
        <%= button_to 'Like', post_like_path(post), method: :post, class: 'btn btn--primary' %>
      <% end %>
    </div>
  </p>
</div>
