<div id="<%= dom_id post %>">
  <p>
    <%= image_tag post.profile.avatar_url, width: '20rem', style: 'border-radius: 10px' %>
    <strong><%= link_to post.profile.name, profile_path(post.profile) %></strong><br>
    <%= post.body %><br>
    <%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes' %>

    <div class="controls">
      <% if post.likers.include?(current_user.profile) %>
        <%= button_to 'Unlike', post_unlike_path(post), method: :delete %>
      <% else%>
        <%= button_to 'Like', post_like_path(post), method: :post %>
      <% end %>
    </div>
  </p>
</div>
