<%= render @post %>

<div>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Delete", @post, method: :delete %>
</div>
<br>

<h3>Comments</h3>
<%= render 'comments/form', post: @post, comment: Comment.new %>
<div id="comments">
  <%= render @comments %>
</div>